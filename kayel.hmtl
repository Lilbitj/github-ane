    #loadingScreen {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: pink;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  color: white;
  font-size: 1.5rem;
  font-family: 'Courier New', monospace;
  animation: fadeOut 1s ease forwards;
  animation-delay: 1s;
}

.loader-heart {
  font-size: 3rem;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

@keyframes fadeOut {
  to { opacity: 0; visibility: hidden; }
}
    #musicInfo {
      position: top;
      top: 15px;
      left: 80px;
      background: rgba(0,0,0,0.3);
      padding: 3px 10px;
      border-radius: 10px;
      font-size: 14px;
      color: green;
      z-index: 998;
    }
  #musicButton {
  position: bottom
  ;
  top: 20px;
  left: 20px;
  background: #3333;
  color: white;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  cursor: pointer;
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
  z-index: 999;
}


.envelope {
  position: relative;
  top: 200px;
  display: inline-block;
  cursor: pointer;
  background: #ff6a7f;
  padding: 30px;
  border-radius: 15px;
  transition: transform 0.3s;
}

.envelope:hover {
  transform: scale(1.05);
}

.letter-container, .translation-container {
  margin-top: 120px;
  display: none;
  padding: 30px;
  border-radius: 15px;
  transition: transform 0.3s;
  color: #ffff;
  max-width: 800px;
  box-shadow: 0 5px 15px rgba(0,0,0,0.7);
  margin-left: auto;
  margin-right: auto;
}

.popup {
  position: fixed;
  bottom: 40%;
  left: 50%;
  transform: translateX(-50%);
  background-color: pink;
  display: none;
  border-radius: 20px;
  padding: 25px;
  text-align: center;
  box-shadow: 0 5px 20px rgba(0,0,0,0.3);
  max-width: 500px;
  z-index: 1000;
}
button {
  margin-top: 30px;
  background: pink;
  border: none;
  padding: 12px 24px;
  font-size: 16px;
  border-radius: 10px;
  cursor: pointer;
}

.popup h2 {
  font-size: 24px;
  color: #b30059;
}

.btn {
  padding: 10px 20px;
  margin: 10px;
  border: none;
  border-radius: 10px;
  font-size: 16px;
  cursor: pointer;
}

.btn-yes {
  background-color: #ff66b3;
  color: white;
}

.btn-no {
  background-color: #999;
  color: white;
}

.full-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url'pop.png'
  background-size: cover;  
  background-position: center;
  display: none;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 999;
}

.full-popup h2 {
  color: #b30059;
  font-size: 54px;
  padding: 50px;
  border-radius: 15px;
}

.emoji {
  position: absolute;
  font-size: 2rem;
  opacity: 0;
  animation: fall linear infinite 5s;
  pointer-events: none;
}

@keyframes fall {
  0% {
    transform: translateY(-200px) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

.photo-stack {
  display: none;
  max-width: 75%;
  margin: 100px auto;
  background: rgba(255,255,255,0.9);
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(13, 13, 13, 1);
}

p {
  text-align: left;
  line-height: 1.8;
  font-size: 15px;
}

.button2 {
  margin-top: 5px;
  background: pink;
  border: none;
  padding: 12px 24px;
  font-size: 16px;
  border-radius: 10px;
  cursor: pointer;
}

.polaroid {
  display: inline-block;
  padding: 20px;
  background: transparent;
  transform: rotate(var(--rotation));
  transition: transform 0.3s;
}

.polaroid img {
  width: 100%;
  border-radius: 0px;
}

  </style>
</head>
